<h2> Share your thoughts </h2>

<%= form_for ([@blog, @blog.comments.build]) do |f| %>

  <%= f.text_area :content, placeholder: "Write a comment...", required: true, autofocus: true %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit "Add comment", class:"btn btn-sm btn-primary" %>
  </div><br>

<% end %>
