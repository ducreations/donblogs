<div class="container">

  <h1>Write your own blog</h1>

  <%= form_for @blog do |f| %>
    <div class="field">
      Blog title<br>
      <%= f.text_field :title, required: true%>
    <div><br>

    <div class="field">
      <%= f.hidden_field :author, value: current_user.name%>
    <div>

    <div class="field">
      Intro<br>
      <%= f.text_field :intro, required: true %>
    <div><br>

    <div class="field">
      Content/Body<br>
      <%= f.text_area :body, required: true %>
    <div><br>

    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
    <div>

    <div class="actions">
      <%= f.submit "Publish", class:"btn btn-sm btn-success" %> |
      <%= link_to "Cancel", blogs_path %>
    <div>
  <% end %>

</div>
