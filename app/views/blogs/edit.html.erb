<div class="container">

  <h1>Edit your blog</h1>

  <%= form_for @blog do |f| %>

    <div class="field">
      Blog title<br>
      <%= f.text_field :title, required: true%>
    <div>

    <div class="field">
      Intro<br>
      <%= f.text_field :intro, required: true %>
    <div>

    <div class="field">
      Content/Body<br>
      <%= f.text_area :body, required: true %>
    <div>

    <div class="actions">
      <%= f.submit "Save changes" %> |
      <%= link_to "Cancel", blogs_path %>
    <div>

  <% end %>

</div>
