<div class="container">
  <div class="row">

    <div class="col-8"> 
      <h5>All users</h5> 

      <table class="table mt-4"> 
        <thead> 
          <tr> 
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
            </tr>
          <% end %>
        </tbody> 
      </table> 
    </div>

    <div class="col-4">
      <h5>Online users</h5>

      <table class="table mt-4">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <%= link_to "Back", :back %>
</div>

