<div class="container">

  <center><p class="fs-3">Log in</p></center>
  <center><p class="text-muted">to continue to Donsblog</p></center>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <div class="form-outine">
        <%= f.email_field :email,
          placeholder: "Email",
          autofocus: true,
          autocomplete: "email",
          class:"form-control" %>
      </div><br />
    </div>

    <div class="field">
      <div class="form-outine">
        <%= f.password_field :password,
          placeholder: "Password",
          autocomplete: "current-password",
          class:"form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-sm btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
